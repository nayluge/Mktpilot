        <script src="/bundles/ocaratcore/js/sugar.min.js"></script>
    {% endblock %}
{% block fos_user_content %}

    <div id="login-container">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                Mkt ocarat
            </div>
            <div class="panel-body">

                <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="form-group">
                        <input class="form-control" type="text" id="username"
                               placeholder="{{ 'security.login.username'|trans }}" name="_username"
                               value="{{ last_username }}"
                               required="required" autofocus/>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="password" id="password" name="_password"
                               placeholder="{{ 'security.login.password'|trans }}" required="required"/>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>

                    <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit"
                           value="{{ 'security.login.submit'|trans }}"/>
                </form>
                {% if error %}
                    <br>
                    <div class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock fos_user_content %}

{% block javascript %}
    {{ parent() }}

    !-- Load and execute javascript code used only in this page -->
    <script src="/bundles/ocaratcore/js/pages/readyLogin.js"></script>
    <script>$(function () {
            ReadyLogin.init();
        });</script>

{% endblock %}
